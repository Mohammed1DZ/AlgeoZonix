{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user of the application, including their role and verification status.",
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "role": { "type": "string", "enum": ["admin", "client", "driver", "customer"] },
        "kycLevel": { "type": "number", "description": "Know Your Customer verification level." },
        "status": { "type": "string", "enum": ["unverified", "pending", "verified", "suspended"] },
        "profileInfo": {
          "type": "object",
          "properties": {
            "firstName": { "type": "string" },
            "lastName": { "type": "string" },
            "dob": { "type": "string", "format": "date" },
            "avatarUrl": { "type": "string", "format": "uri", "description": "URL for the user's profile picture." }
          }
        }
      },
      "required": ["email", "role", "status"]
    },
    "DriverDocuments": {
      "title": "DriverDocuments",
      "description": "Stores documents and OCR data for a driver's verification.",
      "type": "object",
      "properties": {
        "license": { "$ref": "#/entities/DocumentVerification" },
        "registrationCard": { "$ref": "#/entities/DocumentVerification" },
        "platePhoto": { "$ref": "#/entities/ImageVerification" },
        "insurance": { "$ref": "#/entities/DocumentVerification", "description": "Optional insurance document." }
      },
      "required": ["license", "registrationCard", "platePhoto"]
    },
    "Biometrics": {
      "title": "Biometrics",
      "description": "Stores results from facial verification.",
      "type": "object",
      "properties": {
        "livenessScore": { "type": "number" },
        "faceMatchScore": { "type": "number" },
        "spoofFlags": { "type": "array", "items": { "type": "string" } }
      }
    },
    "KycSession": {
      "title": "KycSession",
      "description": "Tracks the state and outcome of a single driver verification session.",
      "type": "object",
      "properties": {
        "status": { "type": "string", "enum": ["pending", "under_review", "approved", "rejected"] },
        "currentStep": { "type": "string" },
        "decision": { "type": "string", "description": "Reason for approval or rejection." },
        "reviewerId": { "type": "string", "description": "Admin who reviewed the session." },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["status", "currentStep", "createdAt", "updatedAt"]
    },
    "RiskFlag": {
      "title": "RiskFlag",
      "description": "Represents a potential risk identified during verification.",
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["low_image_quality", "data_mismatch", "possible_spoof"] },
        "severity": { "type": "string", "enum": ["low", "medium", "high"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["type", "severity", "createdAt"]
    },
    "AuditLog": {
      "title": "AuditLog",
      "description": "Logs significant actions taken within the system for auditing.",
      "type": "object",
      "properties": {
        "actorId": { "type": "string" },
        "action": { "type": "string" },
        "targetId": { "type": "string" },
        "changes": { "type": "object" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["actorId", "action", "timestamp"]
    },
    "DocumentVerification": {
      "title": "DocumentVerification",
      "description": "Holds images, OCR data, and validation status for a document.",
      "type": "object",
      "properties": {
        "frontImageUrl": { "type": "string", "format": "uri" },
        "backImageUrl": { "type": "string", "format": "uri" },
        "ocrData": { "type": "object" },
        "isValid": { "type": "boolean" },
        "validationErrors": { "type": "array", "items": { "type": "string" } }
      }
    },
    "ImageVerification": {
      "title": "ImageVerification",
      "description": "Holds an image and its validation status.",
      "type": "object",
      "properties": {
        "imageUrl": { "type": "string", "format": "uri" },
        "isValid": { "type": "boolean" },
        "validationErrors": { "type": "array", "items": { "type": "string" } }
      }
    },
    "Notification": {
      "title": "Notification",
      "description": "Represents a notification for a user.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "The ID of the user this notification is for." },
        "message": { "type": "string" },
        "isRead": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "link": { "type": "string", "format": "uri", "description": "Optional link to navigate to." }
      },
      "required": ["userId", "message", "isRead", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "phone"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": { "schema": { "$ref": "#/entities/User" }, "description": "Stores core user profile and role." }
      },
      {
        "path": "/users/{userId}/driverDocuments/{docId}",
        "definition": { "schema": { "$ref": "#/entities/DriverDocuments" }, "description": "Stores sensitive driver documents, linked to a user." }
      },
      {
        "path": "/users/{userId}/biometrics/{bioId}",
        "definition": { "schema": { "$ref": "#/entities/Biometrics" }, "description": "Stores biometric verification results for a user." }
      },
       {
        "path": "/users/{userId}/notifications/{notificationId}",
        "definition": { "schema": { "$ref": "#/entities/Notification" }, "description": "Stores user-specific notifications." }
      },
      {
        "path": "/kycSessions/{sessionId}",
        "definition": { "schema": { "$ref": "#/entities/KycSession" }, "description": "Main collection for tracking verification sessions. Contains subcollections for associated data." }
      },
      {
        "path": "/kycSessions/{sessionId}/riskFlags/{flagId}",
        "definition": { "schema": { "$ref": "#/entities/RiskFlag" }, "description": "Flags raised during a specific KYC session." }
      },
      {
        "path": "/auditLogs/{logId}",
        "definition": { "schema": { "$ref": "#/entities/AuditLog" }, "description": "System-wide audit trail." }
      }
    ]
  }
}
